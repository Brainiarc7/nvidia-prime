#!/bin/sh
# postinst script for nvidia-prime
#
# see: dh_installdeb(1)

set -ex

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

xorg_conf="/etc/X11/xorg.conf"

nvidia_id="$(lspci -n | grep 300 | grep de | cut -d" " -f1 | sed s/\\./:/g)"
id_0="$(echo $nvidia_id | cut -d: -f1)"
id_1="$(echo $nvidia_id | cut -d: -f2)"
id_2="$(echo $nvidia_id | cut -d: -f3)"

bus_id=$(printf "%d:%d:%d\n" $id_0 $id_1 $id_1)

now=$(date +"%m%d%Y")

case "$1" in
    configure)
        if [ -f "$xorg_conf" ]; then
            mv $xorg_conf $xorg_conf.$now
        fi
        cat > $xorg_conf <<EOF
# Warning: This file is autogenerated by nvidia-prime. All changes to this file will be lost.

Section "ServerLayout"
    Identifier "layout"
    Screen 0 "nvidia"
    Inactive "intel"
EndSection

Section "Device"
    Identifier "nvidia"
    Driver "nvidia"
    BusID "$bus_id"
EndSection

Section "Screen"
    Identifier "nvidia"
    Device "nvidia"
    # Uncomment this line if your computer has no display devices connected to
    # the NVIDIA GPU.  Leave it commented if you have display devices
    # connected to the NVIDIA GPU that you would like to use.
    Option "UseDisplayDevice" "none"
EndSection

Section "Device"
    Identifier "intel"
    Driver "modesetting"
EndSection

Section "Screen"
    Identifier "intel"
    Device "intel"
EndSection
EOF

        # If there's no lightdm conf file, then we're in trouble
        # add a new one
        if [ ! -f /etc/lightdm/lightdm.conf ]; then
            cp -f /usr/share/nvidia-prime/lightdm.conf /etc/lightdm/lightdm.conf
        fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
